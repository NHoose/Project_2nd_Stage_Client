<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.team_eduart.project2ndstage.Login">

    <include layout="@layout/toolbar_blank" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editTextServerIP"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="363dp"
        android:layout_marginStart="363dp"
        android:hint="Server IP" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/BtnSetServerIP"
        android:layout_alignTop="@+id/editTextServerIP"
        android:layout_toRightOf="@+id/editTextServerIP"
        android:layout_toEndOf="@+id/editTextServerIP" />

</RelativeLayout>
