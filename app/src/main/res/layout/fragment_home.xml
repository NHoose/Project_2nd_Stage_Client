<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.team_eduart.project2ndstage.HomeFragment">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center">
    <!-- TODO: Update blank fragment layout -->

        <FrameLayout
            android:layout_width="450dp"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="30dp"
            android:layout_alignParentLeft="true"
            android:elevation="4dp"
            android:id="@+id/AppGridContainer">

            <!--
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App Liste"
                android:id="@+id/BtnAppList"
                android:layout_gravity="right|top" />

            -->
            <ListView
                android:id="@+id/home_apps_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
        </FrameLayout>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/BtnAppList"
            android:layout_gravity="right|top"
            android:background="@drawable/ic_add_black_24dp"
            android:layout_alignTop="@+id/AppGridContainer"
            android:layout_toRightOf="@+id/AppGridContainer"
            android:layout_toEndOf="@+id/AppGridContainer" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_toEndOf="@+id/BtnAppList"
            android:src="@drawable/home_fake_2"
            android:layout_marginLeft="76dp"
            android:layout_marginStart="76dp"
            android:layout_toRightOf="@+id/BtnAppList" />

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textClock"
            android:textSize="60dp"
            android:layout_marginTop="80dp"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginLeft="87dp"
            android:layout_marginStart="87dp" />

    </RelativeLayout>

</FrameLayout>
