<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.team_eduart.project2ndstage.KalenderFragment"
    android:id="@+id/Hallo">

    <Button
        android:id="@+id/addEventFrag"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right|top"
        android:background="@drawable/ic_add_black_24dp"
        android:layout_marginRight="55dp" />

    <Button
        android:id="@+id/nextWeek"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top|right"
        android:background="@drawable/ic_keyboard_arrow_right_grey600_24dp"
        android:layout_marginRight="125dp"/>

    <Button
        android:id="@+id/prevWeek"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="left|top"
        android:background="@drawable/ic_keyboard_arrow_left_grey600_24dp"
        android:layout_marginLeft="125dp"/>

    <TextView
        android:layout_width="264dp"
        android:layout_height="40dp"
        android:id="@+id/calendarWeekFrag"
        android:layout_gravity="top|center"
        android:textColor="@color/black"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center_vertical|center_horizontal"/>

    <Button
        android:id="@+id/saveEventFrag"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top|right"
        android:background="@drawable/ic_check_black_24dp"
        android:layout_marginRight="40dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/fragShow"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Kalender"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:gravity="center_vertical"
        android:layout_gravity="left|top"
        android:layout_marginLeft="15dp"/>

    <Button
        android:id="@+id/settingsCal"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top|right"
        android:background="@drawable/ic_settings_black_24dp"
        android:layout_marginRight="15dp"/>

